<div class="favorites-designers-body">
  <div class="background-color-block">
  <h1 class="text-center pt-5 pb-4">Nuestros dise√±adores favoritos</h1>

    <div class="container my-container" id="designers-margin">
      <div class="d-flex my-row">
        <% @designers.each do |designer| %>
          <div class="card-favorite-designer col-3">
          <% if designer.photo.attached? %>
            <div class="designer-data-background" style="background-image: url('<%= cl_image_path designer.photo.key %>')">
          <% else %>
            <div class="designer-data-background" style="background-image: url('https://images.unsplash.com/photo-1601933973783-43cf8a7d4c5f?ixid=MXwxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80')">
            <% end %>
            
              <div class="designer-data">
                <h3 class="designer-name-favorite-card"><%= designer.name %></h3>

                <div class="d-flex justify-content-between align-items-center">

                  <div>
                    <%= '<i class="fas fa-star" style="color: orange"></i>'.html_safe * designer.rating %>
                    <%= '<i class="fas fa-star" style="color: grey"></i>'.html_safe * (5 - designer.rating) %>
                  </div>

                  <div>
                  <%#  <% @designers.categories.each do |category| %>
                    <%#  <div class="circle" style="background-image: url('<%= cl_image_path category.photo.key %>
                      <%#  <p class="circle-text"><%= category.title %>
                    <%#  </div>
                  <%#  <% end %>

                  </div>

                </div>
              </div>      
            </div>
          </div>
        <% end %>
      </div>
     
</div>

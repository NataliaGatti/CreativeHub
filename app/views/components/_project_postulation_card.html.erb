<div class="rounded border border-secondary m-2 p-3">

  <div class="d-flex m-2">
  
    <%= cl_image_tag postulation.user.photo.key , class:"user-image m-2 mr-4" %>

    <div class="text-justify">
      <h2><%= postulation.user.name %></h2>
      <i class="fas fa-star" style="color: orange"></i>
      <i class="fas fa-star" style="color: orange"></i>
      <i class="fas fa-star" style="color: orange"></i>
      <i class="fas fa-star" style="color: orange"></i>
      <i class="far fa-star" style="color: orange"></i>
    </div>
  </div>

  <h3 class="mt-3 mb-3">Descripcion del concepto</h3>

  <div class="my-text-wrap rounded p-2 mb-3">
    <p class="m-0"><%= postulation.description %></p>
  </div>

  <div class="d-flex mb-0">
    <% if postulation.status == "Postulado" %>

      <%= link_to "Ver demo", "#", class:"btn btn-info rounded  mr-4" %>
      <%= link_to "Abrir chat", "#", class:"btn btn-info rounded  mr-4" %>

      <%= link_to "Acepatar propuesta", change_projects_postulations_state_path(postulation.project.id, postulation.id), class:"btn btn-primary rounded  mr-4", method: :PATCH %>

      <%= link_to "Rechazar", decline_project_path(postulation.id), class:"btn btn-primary rounded  mr-4", method: :PATCH %>


    <% elsif postulation.status == "Aceptado" %>

      <%= link_to "Ver demo", "#", class:"btn btn-info rounded  mr-4" %>
      <%= link_to "Abrir chat", "#", class:"btn btn-info rounded  mr-4" %>

      <%= link_to  "Aceptado", "#", class:"btn btn-success rounded  mr-4" %>
      
      <%= link_to "Enviar comentario", "#", class:"btn btn-info rounded mr-4" %>

    <% elsif postulation.status == "Declinado" %>
    
      <%= link_to "Ver demo", "#", class:"btn btn-info rounded  mr-4" %>
      <%= link_to "Abrir chat", "#", class:"btn btn-info rounded  mr-4" %>

      <%= link_to "Rechazado", "#", class:"btn btn-danger rounded  mr-4" %>

    <% end %>
  </div>
</div>

<div class="shadow m-2 pl-4 border border-white" style="background-image: url('https://images.unsplash.com/photo-1533628635777-112b2239b1c7?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80');">

  <div class="d-flex m-2 pt-3">
  
    <%= cl_image_tag postulation.user.photo.key , class:"user-image m-2 mr-4" %>


    <div class="text-justify">
      <h2><%= postulation.user.name %></h2>
      <i class="fas fa-star" style="color: orange"></i>
      <i class="fas fa-star" style="color: orange"></i>
      <i class="fas fa-star" style="color: orange"></i>
      <i class="fas fa-star" style="color: orange"></i>
      <i class="far fa-star" style="color: orange"></i>
    </div>
  </div>


  <h3 class="mt-3 mb-3">Descripción del concepto</h3>

  <div class="my-text-wrap rounded p-2 mb-3 bg-white">
    <p class="m-2"><%= postulation.description %></p>
  </div>

  <div class="d-flex mb-0">
    <% if postulation.status == "Postulado" %>

      <%= link_to "Ver demo", postulation.file, class:"btn btn-primary rounded  mr-4", target:"_blank" %>
      <%= link_to "Ver archivo adjunto", @project.photo.key, class:"btn btn-primary rounded  mr-4", target:"_blank" %>
      <%= link_to "Abrir chat", "#", class:"btn btn-primary rounded  mr-4" %>

      <%= link_to "Aceptar propuesta", change_projects_postulations_state_path(postulation.project.id, postulation.id), class:"btn btn-primary rounded  mr-4", method: :PATCH %>

      <%= link_to "Rechazar", decline_project_path(postulation.id), class:"btn btn-primary rounded  mr-4", method: :PATCH %>


    <% elsif postulation.status == "Aceptado" %>

      <%= link_to "Ver demo", postulation.file, class:"btn btn-primary rounded  mr-4", target:"_blank" %>
      <%= link_to "Ver archivo adjunto", @project.photo.key, class:"btn btn-primary rounded  mr-4", target:"_blank" %>
      <%= link_to "Abrir chat", "#", class:"btn btn-primary rounded  mr-4" %>

      <h1 class="btn btn-success rounded  mr-4">Aceptado</h1>
      
      <%= link_to "Enviar devolución", "#", class:"btn btn-primary rounded mr-4" %>

    <% elsif postulation.status == "Declinado" %>
    
      <%= link_to "Ver demo", postulation.file, class:"btn btn-primary rounded  mr-4", target:"_blank" %>
      <%= link_to "Ver archivo adjunto", @project.photo.key, class:"btn btn-primary rounded  mr-4", target:"_blank" %>
      <%= link_to "Abrir chat", "#", class:"btn btn-primary rounded  mr-4" %>

      <h1 class="btn btn-danger rounded  mr-4">Rechazado</h1>

    <% end %>
  </div>
</div>

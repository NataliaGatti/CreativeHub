<div class="col-4 p-2">
  <div class="container border p-3 proposal-card">
    <div class="d-flex">
      <img src="avatar_copany" alt="Logo">
      <div class="column">
        <h4><%= project.user.name %></h4>
        <i class="fas fa-star" style="color: orange"></i>
        <i class="fas fa-star" style="color: orange"></i>
        <i class="fas fa-star" style="color: orange"></i>
        <i class="fas fa-star" style="color: orange"></i>
        <i class="far fa-star" style="color: orange"></i>
      </div>
    </div>

    <div class="d-flex justify-content-between">
      <p>Publicado hace 1 hora</p>
      <p>Propuestas: 5</p>
    </div>

    <h2 class="text-wrap"><%= project.title %></h2>
    <p><%= project.description %></p>

    <h1 class="proposal-cost">USD <%= project.cost.round(0) %></h1>
  </div>
</div>

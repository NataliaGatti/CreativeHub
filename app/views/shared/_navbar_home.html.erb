<div class="navbar navbar-expand-sm navbar-light navbar-lewagon p-5">
  <div>
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "navbar/logo.png", style:"width: 100%" %>
    <% end %>

    <%= link_to "Preguntas frecuentes", "#", class:"text-white pl-3 pr-3"  %>
    <%= link_to "¿Como funciona?", "#", class:"text-white pl-3 pr-3" %>
  </div>

  <div>
  
    <% if user_signed_in? %>
        <li class="nav-item dropdown pr-3" style="list-style:none;">
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user.company? %>
            <%= link_to "Mis proyectos", "#", class: "dropdown-item" %>
          <% else %>
              <%= link_to "Mis postulaciones", "#", class: "dropdown-item" %>
          <% end %> 
              <%= link_to "Chat", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
        </li>
    <% else %>
      <%= link_to "Iniciar sesión",  user_session_path, class:"text-white pl-3 pr-3" %>
      <%= link_to "Registrarse",  new_user_registration_path, class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

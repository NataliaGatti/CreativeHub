<div class="d-flex justify-content-between p-3 navbar-color sticky-top">
 <div class=" p-3">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>
  </div>
  <%# <%= render "search_form" %>
  <div class="pr-1 mr-1 ">
    <div>
      <%= form_tag projects_path, class:"d-flex",method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class:"form-control",
        placeholder: 'Prueba "Vídeo"'
        %>
        <%= submit_tag "Search", class: "btn btn-primary m-0 ml-1 py-0" %>
      <% end %>
    </div>
    <div class="d-flex mt-2 align-items-center">
      <p class="m-0"> Búsquedas populares: </p>
      <% @categories.first(3).each do |category| %>
        <%= link_to category.title, projects_by_category_path(foo_param: category.title), class:"m-0 text-center badge rounded-pill border p-2 px-3 mx-2 border border-dark bg-light" %>
      <% end %>
    </div>
  </div>

  <% if current_user.company %>
    <div>
      <%= link_to "Publica un proyecto", new_project_path, class: "btn btn-outline-primary btn-lg p-2 ml-0 my-2"  %>
    </div>
  <% end %>


  <div>
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item dropdown pr-3" style="list-style:none;">

          <%= cl_image_tag current_user.photo.key, class: "avatar-grande dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

          <% if !current_user.company %>
            
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mis postulaciones", my_postulations_path, class: "dropdown-item" %>
              <%= link_to "Chat", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>

          <% else %>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mis proyectos", my_projects_path, class: "dropdown-item" %>
              <%= link_to "Chat", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>

          <% end %>

        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
      
    </ul>
  </div>
</div>

<%= render "shared/navbar" %>
<%= render "shared/banner" %>

<div class="d-flex ml-2 my-0">
  <%= link_to "Creative Hub Home", root_path  %>  <p class="pl-2">> Todos los proyectos</p>
</div>

<div class="img-back-index" style='background-image: url("https://images.unsplash.com/photo-1493421419110-74f4e85ba126?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=749&q=80")'>

  <div class="container">
    <h2 class="text-center pt-3 m-0"><strong>Todos los proyectos (<%= @projects.size %>)</strong></h2>
  </div>

  <div class="container">
    <div class=" card-grid m-4">
      <% @projects.each do |project| %>
      <div>
        <%= link_to project_path(project) do  %>
          <%= render 'components/proposal_card', project: project %>
        <% end %>
      </div>
      <% end %>

    </div>
  </div>
</div>

<%= render "components/footer" %>
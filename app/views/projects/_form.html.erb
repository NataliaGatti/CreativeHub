<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <%= simple_form_for(project) do |f| %>
      <%= f.input :title, placeholder: "Título de tu proyecto", label_html: {class: "text-white"}, label: "Título del Proyecto"%>
      <%= f.input :description, as: :text, class:"label", placeholder: "Describe tus necesidades, alcances objetivos de manera clara y puntual.", label_html: { class: "text-white"}, label: "Descripción"%>
      <%= f.association :categories, input_html: { class: "js-example-basic-multiple", name: "categories[]" ,multiple:"multiple" },label: "Categoria/s", label_html: { class: "text-white"} %>
      <%= f.input :cost, as: :numeric, placeholder: "¿Cual es tu presupuesto?", label_html: { class: "text-white"},label: "Presupuesto"%>
      <%= f.input :deadline, as: :string, required: false, input_html: 
      {class: "datepicker"}, placeholder: "Fecha maxima de recepción", label_html: { class: "text-white"}, label: "Fecha de entrega maxima" %>
      <%= f.submit "Genera tu projecto", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="banner">
    <%= video_tag "videos/ilustration.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video" %>
  <%= render 'shared/navbar_home' %>
  <div class="container mt-5 mb-5">
    <div class="col-6 banner-text">
      <h1>Encuentra tu próximo proyecto.</h1>

      <%= form_tag projects_path, method: :get do %>
        <div class="input-group">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: 'Prueba "Diseño UX/UI"'
          %>

          <div class="input-group-append">
            <%= submit_tag "Explora", class: "btn btn-primary m-0 border-0 ", id:"basic-addon2" %>
          </div>

        </div>
      <% end %>

        <p class="mt-2" style="font-size: 12px;"> Búsquedas populares: </p>
      <div class="d-flex mt-2 align-items-center">
       
        <% @categories.first(3).each do |category| %>
        <%= link_to category.title, projects_by_category_path(foo_param: category.title), class:" text-center badge rounded-pill border p-2 px-3 ml-0 mr-2 bg-white" %>
        <% end %>
      
      </div>
    </div>

  
  </div>
</div>



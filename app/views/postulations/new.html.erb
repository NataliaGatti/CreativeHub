                      <!-- RUTAS DE LINKS -->
<div class="d-flex ml-2">
  <%= link_to "Creative Hub Home", root_path  %> <p class="px-2">></p> <%= link_to " Proyectos", projects_path  %> <p class="px-2"> > <%= link_to @project.title, project_path(@project) %> ></p> <p>Postulación</p>
</div>

<div class="container shadow mb-5 mt-2 bg-white">
  <div class="d-flex">
    <div class="pt-3 mr-2" >
      <%= cl_image_tag @project.user.photo.key, alt: "Logo", style:"height:120px" %>
    </div>
    <div class="mt-2"style="width:807px">
      <h1 class=" mt-2 text-wrap" style="height: 90px"><%= @project.title%></h1>
      <div class="d-flex mb-4">
        <h2 class="text-secondary m-0" > <%= @project.user.name  %> </h2>
        <div class="d-flex align-items-center ml-3">
          <%= '<i class="fas fa-star" style="color: orange"></i>'.html_safe * @project.user.rating %>
          <%= '<i class="fas fa-star" style="color: grey"></i>'.html_safe * (5 - @project.user.rating) %>
        </div>
      </div>  
    </div>
  </div>
      <div class="row">
        <div class="col-sm-12">
          <h3 class="text-center py-3">Postúlate con tu demo a este proyecto</h3>
          <%= render 'form', project: @project, postulation: @postulation%>
        </div>
      </div>
</div>

